extends layout
block content
  // Navigation
  nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/reg') Sign Up
      // Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a(href='#') About
          li
            a(href='/list') Users
          li
            a(href='#') Contact
  .container
    .jumbotron
      h1= title
  .container
    form(method='POST' action='/reg')
      .form-group
        label(for='exampleInputUsername1') Full Name
        input#exampleInputUsername1.form-control(type='text', aria-describedby='usernameHelp', placeholder='Enter your Full Name', name='name' required)
      .form-group
        label(for='exampleInputBirthday') Birthday
        input#exampleInputBirthday.form-control(type='text', aria-describedby='birthdayHelp', placeholder='Enter your birthdate', name='birthday' required)
        small#emailHelp.form-text.text-muted Date Format : YYYY/MM/DD
      .form-group
        label(for='exampleInputAboutMe1') About Me
        input#exampleInputAboutMe1.form-control(type='text', aria-describedby='aboutMeHelp', placeholder='About me', name='about' required)
        small#emailHelp.form-text.text-muted Write a description about yourself.
      button.btn.btn-primary(type='submit') Submit
