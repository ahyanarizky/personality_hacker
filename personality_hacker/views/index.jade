extends layout

block content
  // Navigation
  nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/reg') Sign Up
      // Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a(href='#') About
          li
            a(href='/list') Users
          li
            a(href='#') Contact
      // /.navbar-collapse
    // /.container
  // Page Content
  .container
    .row
      .col-lg-12.text-center
        h1 Personality Hacker
        p.lead your best choice to determine your personality
   if data
    .container
      h2 Members
      p Sign up to become a member
      table.table.table-striped
        thead
          tr
            th Full Name
            th Birthday
            th About
            th Update
            th Delete
        tbody
          each key in data
            tr
              td= key.name
              td= key.birthday
              td= key.about
              td
                a.btn.btn-warning(href='/update/'+key.id , role='button') Update
              td
                a.btn.btn-danger(href='/delete/'+key.id , role='button') Delete
    // /.row
  // /.container
  // jQuery Version 1.11.1
  script(src='js/jquery.js')
  // Bootstrap Core JavaScript
  script(src='js/bootstrap.min.js')
